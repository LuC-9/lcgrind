generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Problem {
  id         Int     @id @default(autoincrement())
  title      String
  url        String  @unique
  difficulty String
  isPaid     Boolean

  topicTags ProblemsOnTopicTags[]

  SheetProblem SheetProblem[]

  @@index([url])
}

model TopicTag {
  id   Int    @id @default(autoincrement())
  slug String @unique
  name String

  problems ProblemsOnTopicTags[]
}

model ProblemsOnTopicTags {
  problem    Problem  @relation(fields: [problemId], references: [id])
  problemId  Int
  topicTag   TopicTag @relation(fields: [topicTagId], references: [id])
  topicTagId Int

  @@id([problemId, topicTagId])
}

model SheetProblem {
  problem Problem @relation(fields: [problemId], references: [id])
  sheet   Sheet   @relation(fields: [sheetId], references: [id])

  problemId Int
  sheetId   Int

  // Current Order in the Sheet
  // Store all time ordering here for company wise sheets
  sheetOrder Decimal @default(-1.0)
  // Previous order before the update, i.e. prevOrder = sheetOrder, before updating new sheetorder
  prevOrder  Decimal @default(-1.0)

  thirtyDaysOrder     Decimal @default(-1.0)
  prevThirtyDaysOrder Decimal @default(-1.0)

  threeMonthsOrder     Decimal @default(-1.0)
  prevThreeMonthsOrder Decimal @default(-1.0)

  sixMonthsOrder     Decimal @default(-1.0)
  prevSixMonthsOrder Decimal @default(-1.0)

  yearlyOrder     Decimal @default(-1.0)
  prevYearlyOrder Decimal @default(-1.0)

  @@unique([problemId, sheetId])
}

model Sheet {
  id           Int            @id @default(autoincrement())
  slug         String         @unique
  name         String
  website      String         @default("")
  SheetProblem SheetProblem[]
  isCompany    Boolean        @default(false)
}
